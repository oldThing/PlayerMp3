<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center_vertical"
    >
    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/noti_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/icon_items"
        />

    <TextView
        android:id="@+id/noti_text_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song"
        android:layout_toRightOf="@id/noti_image"
        android:padding="5dp"
        android:maxLength="6"
        android:ellipsize="end"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/noti_text_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singer"
        android:layout_toRightOf="@id/noti_image"
        android:layout_below="@id/noti_text_song"
        android:padding="2dp"
        android:minEms="6"
        />




    <ImageButton
        android:id="@+id/noti_next"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:src="@mipmap/icon_next_normal"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/noti_play_and_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/noti_next"
        android:text="播放"

        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/noti_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@id/noti_play_and_pause"
        android:src="@mipmap/icon_front_normal"
        android:background="#00000000"
        android:layout_marginTop="10dp"
        android:gravity="center"

        />





</RelativeLayout>